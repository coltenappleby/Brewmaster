<h1> Create a New User </h1>

<% if @user.errors.any?  %>
    Errors
    <ul>
    <% @user.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
    <% end %>
    </ul>
   <% end %>

<%= form_for @user do |f| %>
<%= f.label :username %>
<%= f.text_field :username %> <br>
<%= f.label :first_name %>
<%= f.text_field :first_name %> <br>
<%= f.label :last_name %>
<%= f.text_field :last_name %> <br>
<%= f.label :birthday %> -- format mm/dd/yyyy
<%= f.text_field :birthday %> <br> 
<%= f.label :hometown %>
<%= f.text_field :hometown %> <br>
<%= f.submit "Create a New User" %>
<% end %>