<!DOCTYPE html>
<html>
  <head>
    <title>Brewmaster</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
    <nav>

      <ul id="mainmenu">
        <li><%= link_to 'All Bars', bars_path() %> </li>
        <li><%= link_to 'All Beers', beers_path() %> </li>
        <li><%= link_to 'All Breweries', breweries_path() %></li>
      
      <% if @current_user %>
      <li> <%= link_to "Welcome #{@current_user.username}", @current_user %>
      <li> <%= link_to "Logout", logout_path, method: :delete %>
      <% else %> 
      <li> <%= link_to "Create User", new_user_path %>
      <li> <%= link_to "Login", new_login_path %>
      <% end %>
      </ul>
    </nav>
 
    <%= yield %>
  </body>
</html>
